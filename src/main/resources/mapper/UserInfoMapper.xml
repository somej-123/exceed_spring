<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blog.exceed.mapper.UserInfoMapper">

    <insert id="insertUserInfo" parameterType="com.blog.exceed.dao.UserInfoDao">
        INSERT INTO public.user_info (
            user_id,
            email,
            password,
            created_at
        ) VALUES (
            #{userId},
            #{email},
            #{password},
            now()
        );
    </insert>

    <select id="selectUserInfo" parameterType="String" resultType="com.blog.exceed.dao.UserInfoDao">
        SELECT * 
          FROM public.user_info
         WHERE user_id = #{userId}
    </select>

    <select id="forgotPassword" parameterType="com.blog.exceed.dao.UserInfoDao" resultType="boolean">
        SELECT EXISTS (
            SELECT 1
              FROM public.user_info
             WHERE user_id = #{userId}
               AND email = #{email}
        ) as check_id_email
    </select>

</mapper> 